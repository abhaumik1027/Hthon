<%- include('header')%>
<body style="font-family: 'Prompt', sans-serif;">
  <div class="container padt2">
    <h1 style="font-family: 'Mochiy Pop P One', sans-serif;">A-LINKS</h1>
    <div class="container bg-light padtsm">
        <%- include('infoBox')%>
        <div class="container"><%- include('createForm')%></div>
        
    </div>
    <div class='padtsm'></div>        

        <table id="sortTab" class="table table-striped">
          <thead>
            <tr>
              <th>Full URL</th>
              <th>A-Links</th>
              <th>Creator</th>
              <th>Clicks</th>
              <th>Date</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %> 
              <tr class="search">
                <td><div class='col-ellip'>
                    <a style="text-decoration: none;" href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                </div>
                <% 
                  let tagClass = "";
                  if(shortUrl.tag == 'GENERAL') {
                    tagClass = "badge-primary";
                  } 
                  if(shortUrl.tag == 'DATABASE') {
                    tagClass = "badge-secondary";
                  } 
                  if(shortUrl.tag == 'SECURITY') {
                    tagClass = "badge-danger";
                  } 
                  if(shortUrl.tag == 'USER INTERFACE') {
                    tagClass = "badge-success";
                  } 
                  
              %> 

              <span class="badge <%= tagClass %> badge-pill"><%= shortUrl.tag %></span>
              </td>
                <td><a style="text-decoration: none;" href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                <td class='creator-col-ellip'><%= shortUrl.creator %></td>
                <td><%= shortUrl.clicks %></td>
                <td><%= shortUrl.date %></td>
                <td>
                  <form class="form-inline">
                    <a class="btn" type="button" data-toggle="modal" 
                      data-target="#exampleModalAlert" data-whatever="<%= shortUrl.full %>,<%= shortUrl.short %>,<%= shortUrl.linkID %>">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#EE4B2B" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                      </svg>
                    </a>
              
                    
                    <a class="btn" type="button" data-toggle="modal" 
                      data-target="#exampleModal" data-whatever="<%= shortUrl.full %>,<%= shortUrl.short %>,<%= shortUrl.linkID %>">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#056608" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                      </svg>
                    </a>
                    
                  </form>
              
                 </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
                
        <!-- Edit Modal -->
        <%- include('modal')%>
        <!-- Modal --> 

        <!-- Delete Modal -->
        <%- include('alert')%>
        <!-- Modal -->    
      </div>
    </div>
    <%- include('utilJS')%> 
     
    
</body>
</html>             
  